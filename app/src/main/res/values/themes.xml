<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HairApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Modern Indigo Theme -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        <item name="colorPrimaryContainer">@color/primary_container</item>
        
        <item name="colorSecondary">@color/charcoal</item>
        <item name="colorSecondaryVariant">@color/charcoal_light</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <item name="android:statusBarColor">@color/background_soft</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/white</item>
        
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="android:colorBackground">@color/background_soft</item>
        
        <!-- Material Component Styling -->
        <item name="materialCardViewStyle">@style/Widget.HairApp.CardView</item>
        <item name="chipStyle">@style/Widget.HairApp.Chip</item>
        <item name="bottomNavigationStyle">@style/Widget.HairApp.BottomNavigation</item>
        <item name="tabStyle">@style/Widget.HairApp.TabLayout</item>
    </style>
    
    <style name="Theme.HairApp" parent="Base.Theme.HairApp" />
    
    <!-- Custom Card Style with Shadows -->
    <style name="Widget.HairApp.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/background_card</item>
        <item name="strokeWidth">0dp</item>
    </style>
    
    <!-- Custom Chip Style -->
    <style name="Widget.HairApp.Chip" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipCornerRadius">20dp</item>
        <item name="chipBackgroundColor">@color/surface_variant</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="Widget.HairApp.Chip.Selected" parent="Widget.HairApp.Chip">
        <item name="chipBackgroundColor">@color/primary_container</item>
        <item name="android:textColor">@color/primary_dark</item>
    </style>
    
    <!-- Bottom Navigation Style -->
    <style name="Widget.HairApp.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">@color/surface</item>
        <item name="itemIconTint">@color/selector_nav_item</item>
        <item name="itemTextColor">@color/selector_nav_item</item>
        <item name="elevation">8dp</item>
        <item name="itemActiveIndicatorStyle">@style/Widget.HairApp.BottomNavigation.ActiveIndicator</item>
    </style>
    
    <style name="Widget.HairApp.BottomNavigation.ActiveIndicator" parent="">
        <item name="android:color">@color/primary_container</item>
    </style>
    
    <!-- Tab Layout Style -->
    <style name="Widget.HairApp.TabLayout" parent="Widget.Material3.TabLayout">
        <item name="tabIndicatorColor">@color/primary</item>
        <item name="tabSelectedTextColor">@color/primary</item>
        <item name="tabTextColor">@color/text_secondary</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabIndicatorFullWidth">false</item>
    </style>
    
    <!-- Button Styles -->
    <style name="Widget.HairApp.Button.Primary" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:paddingVertical">12dp</item>
    </style>
    
    <style name="Widget.HairApp.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
        <item name="cornerRadius">12dp</item>
    </style>
    
    <!-- Search Bar Style -->
    <style name="Widget.HairApp.SearchBar" parent="">
        <item name="android:background">@drawable/bg_search_bar</item>
        <item name="android:padding">12dp</item>
    </style>
    
    <!-- Title Text Styles -->
    <style name="TextAppearance.HairApp.Headline" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.HairApp.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.HairApp.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Bottom Sheet Dialog Style -->
    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>
