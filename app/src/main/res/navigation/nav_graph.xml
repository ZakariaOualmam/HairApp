<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.barbershop.app.ui.auth.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.barbershop.app.ui.auth.RegisterFragment"
        android:label="Register"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.barbershop.app.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_barberProfileFragment"
            app:destination="@id/barberProfileFragment" />
    </fragment>

    <fragment
        android:id="@+id/barberProfileFragment"
        android:name="com.barbershop.app.ui.barber.BarberProfileFragment"
        android:label="Barber Profile"
        tools:layout="@layout/fragment_barber_profile">
        <argument
            android:name="barber"
            app:argType="com.barbershop.app.domain.model.Barber" />
        <action
            android:id="@+id/action_barberProfileFragment_to_bookingFragment"
            app:destination="@id/bookingFragment" />
    </fragment>

    <fragment
        android:id="@+id/bookingFragment"
        android:name="com.barbershop.app.ui.booking.BookingFragment"
        android:label="Booking"
        tools:layout="@layout/fragment_booking">
        <argument android:name="barberId" app:argType="string"/>
        <argument android:name="barberName" app:argType="string"/>
        <argument android:name="serviceName" app:argType="string"/>
        <argument android:name="price" app:argType="float"/> <!-- float for simple double conversion handling in safe args usually, but here manual -->
        <action
            android:id="@+id/action_bookingFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/adminFragment"
        android:name="com.barbershop.app.ui.admin.AdminFragment"
        android:label="Admin Dashboard"
        tools:layout="@layout/fragment_admin" />

    <fragment
        android:id="@+id/chatFragment"
        android:name="com.barbershop.app.ui.chat.ChatFragment"
        android:label="Chat"
        tools:layout="@layout/fragment_chat" />

    <fragment
        android:id="@+id/aiFeaturesFragment"
        android:name="com.barbershop.app.ui.ai.AIFeaturesFragment"
        android:label="AI Features"
        tools:layout="@layout/fragment_ai_features" />

    <fragment
        android:id="@+id/userProfileFragment"
        android:name="com.barbershop.app.ui.profile.UserProfileFragment"
        android:label="My Profile"
        tools:layout="@layout/fragment_user_profile">
        <action
            android:id="@+id/action_userProfileFragment_to_bookingListFragment"
            app:destination="@id/bookingListFragment" />
        <action
            android:id="@+id/action_userProfileFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/bookingListFragment"
        android:name="com.barbershop.app.ui.booking.BookingListFragment"
        android:label="My Bookings"
        tools:layout="@layout/fragment_booking_list" />

    <fragment
        android:id="@+id/barberDashboardFragment"
        android:name="com.barbershop.app.ui.barber.BarberDashboardFragment"
        android:label="Barber Console"
        tools:layout="@layout/fragment_barber_dashboard" />

    <fragment
        android:id="@+id/adminDashboardFragment"
        android:name="com.barbershop.app.ui.admin.AdminDashboardFragment"
        android:label="Admin Console"
        tools:layout="@layout/fragment_admin_dashboard" />


</navigation>
