<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_soft"
    tools:context=".ui.barber.BarberProfileFragment">

    <!-- Map Section - Takes most of the screen -->
    <FrameLayout
        android:id="@+id/mapContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Map Placeholder/Image -->
        <ImageView
            android:id="@+id/ivMapPlaceholder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_map_placeholder"/>

        <!-- Barber Pin Marker (Red) -->
        <ImageView
            android:id="@+id/ivBarberPin"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginBottom="80dp"
            android:src="@drawable/ic_map_pin_crimson"/>

        <!-- User Current Location (Blue Circle) -->
        <FrameLayout
            android:id="@+id/userLocationContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="100dp">

            <!-- Blue circle pulse effect -->
            <View
                android:id="@+id/userLocationPulse"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_user_location_pulse"/>

            <!-- Blue dot center -->
            <View
                android:id="@+id/userLocationDot"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_user_location_dot"/>

        </FrameLayout>

        <!-- Location Not Enabled Warning -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardLocationWarning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="100dp"
            android:visibility="gone"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/error_light">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_location"
                    app:tint="@color/error"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enable location in settings"
                    android:textSize="13sp"
                    android:textColor="@color/error"
                    android:layout_marginStart="8dp"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_chevron_right"
                    app:tint="@color/error"
                    android:layout_marginStart="8dp"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </FrameLayout>

    <!-- Bottom Sheet - Offer Your Haircut -->
    <LinearLayout
        android:id="@+id/bottomSheetContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="@drawable/bg_bottom_sheet"
        android:elevation="16dp"
        android:padding="20dp">

        <!-- Drag Handle -->
        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_drag_handle"/>

        <!-- Offer Your Haircut Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardOfferHaircut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/surface"
            app:strokeWidth="1dp"
            app:strokeColor="@color/divider"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_scissors"
                    app:tint="@color/primary"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Offer your haircut"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginStart="12dp"/>

                <TextView
                    android:id="@+id/tvSelectedService"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="13sp"
                    android:textColor="@color/primary"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/ivExpandArrow"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_chevron_right"
                    app:tint="@color/text_secondary"
                    android:layout_marginStart="8dp"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Bottom Action Buttons - Initially hidden, shown after service selection -->
        <LinearLayout
            android:id="@+id/actionButtonsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:visibility="gone">

            <!-- Barber Profile Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBarberProfile"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:icon="@drawable/ic_profile"
                app:iconGravity="textStart"
                app:iconTint="@color/primary"
                app:iconSize="24dp"
                app:iconPadding="0dp"
                app:cornerRadius="28dp"
                app:backgroundTint="@color/primary_container"
                app:strokeWidth="0dp"
                android:layout_marginEnd="12dp"/>

            <!-- Command Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCommand"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="Command"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:cornerRadius="14dp"
                app:backgroundTint="@color/success"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Service Selection Popup Overlay -->
    <FrameLayout
        android:id="@+id/servicePopupOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <!-- Service Selection Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardServicePopup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/surface"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Offer your haircut"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"/>

                    <ImageView
                        android:id="@+id/btnCloseServicePopup"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_close"
                        android:padding="4dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        app:tint="@color/text_secondary"/>

                </LinearLayout>

                <!-- Haircut Option -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardServiceHaircut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/surface_variant"
                    app:strokeWidth="0dp"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="14dp">

                        <RadioButton
                            android:id="@+id/rbHaircut"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/primary"/>

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_scissors"
                            app:tint="@color/primary"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/bg_icon_circle"
                            android:padding="8dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Haircut"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="~30 min"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$25"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Beard Trim Option -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardServiceBeardTrim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/surface_variant"
                    app:strokeWidth="0dp"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="14dp">

                        <RadioButton
                            android:id="@+id/rbBeardTrim"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/primary"/>

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_beard"
                            app:tint="@color/accent_orange"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/bg_icon_circle_orange"
                            android:padding="8dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Beard Trim"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="~15 min"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$15"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Full Shave Option -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardServiceFullShave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/surface_variant"
                    app:strokeWidth="0dp"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="14dp">

                        <RadioButton
                            android:id="@+id/rbFullShave"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/primary"/>

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_razor"
                            app:tint="@color/accent_teal"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/bg_icon_circle_teal"
                            android:padding="8dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Full Shave"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="~20 min"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$20"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </FrameLayout>

    <!-- Barber Profile Popup Overlay -->
    <FrameLayout
        android:id="@+id/barberProfileOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <!-- Barber Profile Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardBarberProfilePopup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/surface"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Header with Close -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Barber Profile"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"/>

                    <ImageView
                        android:id="@+id/btnCloseBarberPopup"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_close"
                        android:padding="4dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        app:tint="@color/text_secondary"/>

                </LinearLayout>

                <!-- Barber Info Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <!-- Barber Avatar -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        app:cardCornerRadius="35dp"
                        app:cardElevation="2dp"
                        app:strokeWidth="0dp">

                        <ImageView
                            android:id="@+id/ivBarberAvatar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_profile"
                            android:scaleType="centerCrop"
                            android:background="@color/primary_container"
                            android:padding="14dp"
                            app:tint="@color/primary"/>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Barber Details -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="14dp">

                        <TextView
                            android:id="@+id/tvBarberName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Khalid Al Mansoori"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"/>

                        <!-- Rating Row -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="4dp">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_star_filled"
                                app:tint="@color/star_gold"/>

                            <TextView
                                android:id="@+id/tvBarberRating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4.8 (120 reviews)"
                                android:textSize="14sp"
                                android:textColor="@color/text_secondary"
                                android:layout_marginStart="4dp"/>

                        </LinearLayout>

                        <!-- Barber ID -->
                        <TextView
                            android:id="@+id/tvBarberId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ID: BRB123456"
                            android:textSize="12sp"
                            android:textColor="@color/text_hint"
                            android:layout_marginTop="2dp"/>

                    </LinearLayout>

                </LinearLayout>

                <!-- Location Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="14dp"
                    android:background="@drawable/bg_rounded_surface"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_location"
                        app:tint="@color/primary"/>

                    <TextView
                        android:id="@+id/tvBarberLocation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Downtown Barbershop, 123 Main St"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"
                        android:layout_marginStart="10dp"/>

                    <TextView
                        android:id="@+id/tvDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.8 km"
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary"/>

                </LinearLayout>

                <!-- Action Buttons: Call & Messages -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <!-- Call Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCallBarber"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_weight="1"
                        android:text="Call"
                        android:textSize="15sp"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        app:icon="@drawable/ic_phone_call"
                        app:iconGravity="textStart"
                        app:iconTint="@color/white"
                        app:cornerRadius="12dp"
                        app:backgroundTint="@color/success"
                        android:layout_marginEnd="8dp"/>

                    <!-- Messages Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnMessages"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_weight="1"
                        android:text="Messages"
                        android:textSize="15sp"
                        android:textAllCaps="false"
                        android:textColor="@color/primary"
                        app:icon="@drawable/ic_message"
                        app:iconGravity="textStart"
                        app:iconTint="@color/primary"
                        app:cornerRadius="12dp"
                        app:backgroundTint="@color/primary_container"
                        android:layout_marginStart="8dp"/>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
