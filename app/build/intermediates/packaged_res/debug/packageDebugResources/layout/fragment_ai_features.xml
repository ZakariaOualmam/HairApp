<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_soft"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI Studio"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/charcoal"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Experience the future of grooming."
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="24dp"/>

        <!-- Feature Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <!-- Haircut Simulator Card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <include layout="@layout/item_ai_feature" android:id="@+id/cardSimulator"/>
            </LinearLayout>

            <!-- Face Analysis Card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <include layout="@layout/item_ai_feature" android:id="@+id/cardFaceAnalysis"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Style Recommendations Card (Full Width) -->
        <include layout="@layout/item_ai_feature" android:id="@+id/cardRecommendations"/>

        <!-- Info Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* These features use advanced AI to process your camera input."
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"/>

    </LinearLayout>
</ScrollView>
